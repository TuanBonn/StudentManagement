<form action="/student/add" method="post" class="container col-md-8 card bg-warning mt-3">
    <h1 class="text-danger text-uppercase text-center mt-3">Add new Student</h1>
    <div class="form-group">
        <lable for="name" class="text-primary">Name</lable>
        <input class="form-control" type="text" name="name" required minlength="3" maxlength="30">
    </div>
    <div class="form-group mt-3">
        <lable for="birthday" class="text-primary">Date of Birth</lable>
        <input class="form-control" type="date" name="dob" id="" required>
    </div>
    <div class="form-group mt-3">
        <lable for="gpa" class="text-primary">GPA</lable>
        <input class="form-control" type="number" name="gpa" min="0" max="10">
    </div>
    <div class="form-group mt-3">
        <lable for="gender" class="text-primary">Gender</lable>
        <input type="radio" name="gender" value="Male" > Male
        <input type="radio" name="gender" value="Female" > Female
    </div>
    <div class="form-group mt-3">
        <lable for="image" class="text-primary">Image</lable>
        <input class="form-control" type="url" name="image" required>
    </div>
    <div class="form-group mt-3">
        <input class="btn btn-primary" type="submit" value="Add">
        <input class="btn btn-success" type="reset" value="Clear">
    </div>
</form>