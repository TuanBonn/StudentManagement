<form action="/student/edit/{{ student._id }}" method="post" class="container col-md-8 card bg-warning mt-3">
    <h1 class="text-danger text-uppercase text-center mt-3">Add new Student</h1>
    <div class="form-group">
        <lable for="name" class="text-primary">Name</lable>
        <input class="form-control" type="text" name="name" required minlength="3" maxlength="30" value="{{ student.name }}" disabled>
    </div>
    <div class="form-group mt-3">
        <lable for="birthday" class="text-primary">Date of Birth</lable>
        <input class="form-control" type="date" name="dob" id="" value="{{ dateFormat student.dob 'YYYY-MM-DD' }}" required>
    </div>
    <div class="form-group mt-3">
        <lable for="gpa" class="text-primary">GPA</lable>
        <input class="form-control" type="number" name="gpa" min="0" max="10" value="{{ student.gpa }}">
    </div>
    <div class="form-group mt-3">
        <lable for="gender" class="text-primary">Gender</lable>
        <br>
        {{#equal student.gender "Male"}}
            <input type="radio" name="gender" value="Male" checked=true> Male
            <input type="radio" name="gender" value="Female" > Female
        {{/equal}}
        {{#equal student.gender "Female"}}
            <input type="radio" name="gender" value="Male" > Male
            <input type="radio" name="gender" value="Female" checked=true> Female
        {{/equal}}

    </div>
    <div class="form-group mt-3">
        <lable for="image" class="text-primary">Image</lable>
        <img src="{{student.image}}" alt="This is student Image" width="150" height="150">
        <br><br>
        <input class="form-control" type="url" name="image" value="{{ student.image }}" required>
    </div>
    <div class="form-group mt-3">
        <input class="btn btn-primary" type="submit" value="Add">
        <input class="btn btn-success" type="reset" value="Clear">
    </div>
</form>